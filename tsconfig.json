{
    "compileOnSave": false,
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": true,
        "target": "es5",
        "baseUrl": ".",
        "paths": {
            "~/*": ["lib/*"],
            "*": ["node_modules/*"]
        },
        "lib": [ "es2016", "dom" ]
    },
    "exclude": [
        "node_modules"
    ]
}